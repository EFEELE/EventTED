---
import "../styles/global.css";
import Header from "../components/layout/Header.astro";
import Footer from "../components/layout/Footer.astro";

const { title, description } = Astro.props;
const siteUrl = new URL(Astro.url).origin;
const SEO = {
  title,
  description,
  sitename: "NeonMint by EFEELEðŸš€",
  url: siteUrl,
  locale: "en_US",
  author: "Fernando Lopez | EFEELE",
  twitter: "@efeeledev",
  ogimage: {
    url: "/images/imagedefault.webp",
    alt: "Default image of EFEELE",
    twitter: `${siteUrl}/images/imagedefault.webp`,
  },
  lang: Astro.currentLocale ?? "en",
};
const themeColor = "#0E0E11";
---

<!doctype html>
<html lang={SEO.lang}>
  <head>
    <!-- General Meta -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="theme-color" content={themeColor} />
    <meta name="generator" content={Astro.generator} />
    <meta name="author" content={SEO.author} />
    <meta name="robots" content="index, follow" />

    <!-- Primary Meta -->
    <title>{SEO.title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={`${Astro.site}${Astro.url.pathname}`} />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32" />
    <link rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16" />
    <link
      rel="icon"
      type="image/png"
      href="/android-chrome-192x192.png"
      sizes="192x192"
    />
    <link
      rel="icon"
      type="image/png"
      href="/android-chrome-512x512.png"
      sizes="512x512"
    />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={SEO.title} />
    <meta property="og:description" content={SEO.description} />
    <meta property="og:image" content={SEO.ogimage.url} />
    <meta property="og:image:alt" content={SEO.ogimage.alt} />
    <meta property="og:url" content={SEO.url} />
    <meta property="og:site_name" content={SEO.sitename} />
    <meta property="og:locale" content={SEO.locale} />

    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={SEO.title} />
    <meta name="twitter:description" content={SEO.description} />
    <meta name="twitter:image" content={SEO.ogimage.twitter} />
    <meta name="twitter:image:alt" content={SEO.ogimage.alt} />
    <meta name="twitter:site" content={SEO.twitter} />
  </head>

  <body>
    <Header />
    <slot />
    <Footer />
  </body>

  <style>
    html,
    body {
      margin: 0;
      width: 100%;
      height: 100%;
    }
  </style>
</html>
